<h2>Characters</h2>

<!-- Search Bar -->
<div class="container-fluid">
    <form action="/characters" method="post">
        <fieldset>
            <div class="row mb-3">
                <div class="col-4">
                    <input type="search" name="search" class="form-control" placeholder="Search Characters by Name...">
                </div>
                <div class="col-1">
                    <button type="submit" class="btn btn-success">Search</button>
                </div>
                <div class="col-2">
                    <button type="submit" formmethod="get" class="btn btn-danger">Reset View</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<!-- Character Table -->
<table class="table caption-top table-striped table-hover">
    <caption>Current Characters</caption>
    <thead>
    <tr>
        <th>Character ID</th>
        <th>Name</th>
        <th>Health</th>
        <th>Enemies Killed</th>
        <th>Magic</th>
        <th>Strength</th>
        <th>Money</th>
        <th>Region ID</th>
        <th>Region Name</th>
    </tr>
    </thead>
    <tbody>
    <% table.forEach(row=>{ %>
        <tr>
            <td> <%= row.characterID %> </td>
            <td> <%= row.name %> </td>
            <td> <%= row.health %> </td>
            <td> <%= row.enemiesKilled %> </td>
            <td> <%= row.magic %> </td>
            <td> <%= row.strength %> </td>
            <td> <%= row.money %> </td>
            <td> <%= row.regionID %> </td>
            <td> <%= row.regionName %></td>
        </tr>
    <% }); %>

    </tbody>
</table>
