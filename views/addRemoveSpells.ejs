<!-- New Spell Form -->

<form action="/spells/addRemoveSpells?action=add" method="post">
    <fieldset class="form-control">
        <legend>Add Spell</legend>
        <div class="row mb-3">
            <div class="col-2">
                <label for="newName" class="form-label">Name:</label>
                <input type="text" name="name" id="newName" class="form-control" placeholder="Spell Name" maxlength="255" required>
            </div>
            <div class="col-1">
                <label for="buyCost" class="form-label">Purchase Cost:</label>
                <input type="number" name="buyCost" id="buyCost" class="form-control" value="0" min="0" required>
            </div>
            <div class="col-1">
                <label for="upgradeCost" class="form-label">Upgrade Cost:</label>
                <input type="number" name="upgradeCost" id="upgradeCost" class="form-control" value="0" min="0" required>
            </div>
            <div class="col-1">
                <label for="strength" class="form-label">Strength:</label>
                <input type="number" name="strength" id="strength" class="form-control" value="0" min="0" required>
            </div>
            <div class="col-2">
                <label for="characterID" class="form-label">Assign Spell to Character:</label>
                <select name="characterID" id="characterID" class="form-select" required>
                    <% characterIDs.forEach(row => { %>
                        <option value="<%= row.characterID %>"> <%= row.characterID %>: <%= row.name %> </option>
                    <% }); %>
                </select>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Add New Spell</button>
            </div>
        </div>
    </fieldset>
</form>

<h4><%= result %></h4>

<!-- Remove Spell Form -->

<form action="/spells/addRemoveSpells?action=delete" method="post">
    <fieldset class="form-control">
        <legend>Remove Spell</legend>
        <div class="row mb-3">
            <div class="col-1">
                <label for="spellID" class="form-label">Spell ID:</label>
                <select name="spellID" id="spellID" class="form-select" required>
                    <% spellIDs.forEach(row => { %>
                        <option value="<%= row.spellID %>"> <%= row.spellID %>: <%= row.name %> </option>
                    <% }); %>
                </select>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <button type="submit" class="btn btn-danger">Remove Spell</button>
            </div>
        </div>
    </fieldset>
</form>
