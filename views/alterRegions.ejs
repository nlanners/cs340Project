<!-- Alter Regions Form -->
<form>
    <fieldset class="form-control">
        <legend>Alter Region</legend>
        <div class="row mb-3">
            <div class="col-2">
                <label for="regionID" class="form-label">Region ID:</label>
                <input type="number" id="regionID" class="form-control" required>
            </div>
            <div class="col-4">
                <label for="name" class="form-label">Name:</label>
                <input type="text" id="name" class="form-control" placeholder="Region Name" maxlength="255">
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Alter Region</button>
            </div>
        </div>
    </fieldset>
</form>
