<!-- Search Bar -->
<div class="container-fluid">
    <form>
        <fieldset>
            <div class="row mb-3">
                <div class="col-4">
                    <input type="text" class="form-control" placeholder="Search Spells by Name...">
                </div>
                <div class="col-2">
                    <button type="submit" class="btn btn-success">Search</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<!-- Spells Table -->
<table class="table caption-top table-striped table-hover">
    <caption>Current Spells</caption>
    <thead>
    <tr>
        <th>Spell ID</th>
        <th>Name</th>
        <th>Purchase Cost</th>
        <th>Upgrade Cost</th>
        <th>Strength</th>
        <th>Character</th>
    </tr>
    </thead>
</table>
