<!-- Alter Item Form -->
<form>
    <fieldset class="form-control">
        <legend>Alter Item</legend>
        <div class="row mb-3">
            <div class="col-2">
                <label for="itemID" class="form-label">Item ID:</label>
                <input type="number" id="itemID" class="form-control" required>
            </div>
            <div class="col-4">
                <label for="name" class="form-label">Name:</label>
                <input type="text" id="name" class="form-control" placeholder="Item Name" maxlength="255">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2">
                <label for="damage" class="form-label">Damage:</label>
                <input type="number" id="damage" class="form-control">
            </div>
            <div class="col-2">
                <label for="cost" class="form-label">Cost:</label>
                <input type="number" id="cost" class="form-control">
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Alter Item</button>
            </div>
        </div>
    </fieldset>
</form>
