<!-- Add Region Form -->
<form>
    <fieldset class="form-control">
        <legend>Add Region</legend>
        <div class="row mb-3">
            <div class="col-4">
                <label for="newName" class="form-label">Name:</label>
                <input type="text" id="newName" class="form-control" placeholder="Region Name" maxlength="255" required>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col">
                <button type="submit" class="btn btn-primary">Add New Region</button>
            </div>
        </div>
    </fieldset>
</form>

<!-- Remove Region Form -->
<form>
    <fieldset class="form-control">
        <legend>Remove Region</legend>
        <div class="row mb-3">
            <div class="col-1">
                <label for="regionID" class="form-label">Region ID:</label>
                <input type="number" id="regionID" class="form-control" placeholder="0" required>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <button type="submit" class="btn btn-danger" onclick="alert('Are you sure?')">Remove Region</button>
            </div>
        </div>
    </fieldset>
</form>
